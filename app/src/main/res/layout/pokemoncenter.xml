<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokemoncenterbg"
    tools:context=".PokeLab">

    <!-- Background -->
    <ImageView
        android:id="@+id/backgroundImage1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/pokemoncenterbg"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Container -->
    <View
        android:id="@+id/backgroundBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="25dp"
        android:background="@drawable/container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <View
        android:id="@+id/choosingbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/choosingbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74"
        android:visibility="gone"/>

    <!-- Pokeball logo -->
    <ImageView
        android:id="@+id/pokeball"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/backgroundBox"
        app:layout_constraintTop_toTopOf="@id/backgroundBox"
        app:srcCompat="@drawable/pokeballlogo" />

    <!-- Professor Oak -->
    <ImageView
        android:id="@+id/Nurse_Joy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@id/backgroundBox"
        app:layout_constraintTop_toTopOf="@id/backgroundBox"
        app:srcCompat="@drawable/nurse_joy" />


    <!-- Speech bubble -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/textbubble"
        android:fontFamily="@font/pokemon_pixel_font"
        android:padding="12dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundBox"
        app:layout_constraintStart_toStartOf="@+id/backgroundBox"
        app:layout_constraintTop_toBottomOf="@+id/pokeball" />

    <!-- Blinking Indicator -->
    <TextView
        android:id="@+id/blinkIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        app:layout_constraintStart_toEndOf="@id/textView"
        android:layout_marginStart="4dp"/>

    <Button
        android:id="@+id/answerButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:text="Next"
        android:textColor="@android:color/white"
        android:fontFamily="@font/pokemon_pixel_font"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Nurse_Joy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/backgroundBox"
        app:layout_constraintTop_toBottomOf="@id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
