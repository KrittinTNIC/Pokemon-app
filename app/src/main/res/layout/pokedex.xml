<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pokedex">

    <!-- Fullscreen Background -->
    <ImageView
        android:id="@+id/backgroundImage1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/pokedexbg"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Semi-transparent box behind content -->
    <View
        android:id="@+id/backgroundBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="25dp"
        android:background="@drawable/container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pokémon Name -->
    <TextView
        android:id="@+id/pokemonName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pokemon Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/pokemon_pixel_font"
        app:layout_constraintTop_toTopOf="@id/backgroundBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Pokémon Image -->
    <ImageView
        android:id="@+id/pokemonImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/charmander"
        app:layout_constraintTop_toBottomOf="@id/pokemonName3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Element -->
    <TextView
        android:id="@+id/elementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Element: Fire"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/pokemon_pixel_font"
        android:background="@drawable/elementstextbox"
        app:layout_constraintTop_toBottomOf="@id/pokemonImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Sub-element -->
    <TextView
        android:id="@+id/subelementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub: None"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/pokemon_pixel_font"
        android:background="@drawable/elementstextbox"
        app:layout_constraintTop_toBottomOf="@id/elementText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Stats Stack -->
    <LinearLayout
        android:id="@+id/statsLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/subelementText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/hpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/pokemon_pixel_font"
            android:text="HP : 50/100"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/atkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/pokemon_pixel_font"
            android:text="ATK : 50/100"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/defText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/pokemon_pixel_font"
            android:text="DEF : 50/100"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/spdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/pokemon_pixel_font"
            android:text="SPD : 50/100"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Restart Button -->
    <Button
        android:id="@+id/restartButton"
        android:text="Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@id/backgroundBox"/>

</androidx.constraintlayout.widget.ConstraintLayout>
